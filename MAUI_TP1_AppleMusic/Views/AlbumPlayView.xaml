<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_TP1_AppleMusic.Views.AlbumPlayView">
    <Grid Style="{StaticResource Album}">
        <Frame Style="{StaticResource SmalImage}"
               Grid.Column="0"
               VerticalOptions="Center"
               HorizontalOptions="Center">
            <Image Source="chroniques_bluesymentales.png" Margin="20" Style="{StaticResource PlayImage}"/>
        </Frame>
     
        <Label Grid.Column="1" 
            Text="Caméra terminus"
            FontSize="Medium"
            VerticalOptions="Center" />
        
        <Image Grid.Column="2"
               Source="play.png"
               Style="{StaticResource Size15Image}" />
        <Image Grid.Column="3"
               Source="playplay.png"
               Style="{StaticResource BasicImage}"
               Margin="15"/>
    </Grid>
   
</ContentView>

