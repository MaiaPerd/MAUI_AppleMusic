<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_TP1_AppleMusic.Views.MusicDetailView">
   <Grid Style="{StaticResource MusicItem}">
        <Image Grid.Column="0"
               Source="etoile_grise.png"
               Style="{StaticResource Size10Image}"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               IsVisible="{Binding Fav}"/>
        <Label Grid.Column="1"
               Text="{Binding Numero}"
               Style="{StaticResource MusicNumber}"
               VerticalOptions="Center"
               HorizontalOptions="Start"/>
        <Label Grid.Column="2"
               Text="{Binding Nom}"
               Style="{StaticResource MusicName}"
               VerticalOptions="Center"
               MaxLines="1"
               MaximumWidthRequest="220"
               HorizontalOptions="Start"/>
        <Image Grid.Column="3"
               Source="telecharger.png"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Style="{StaticResource Size10Image}" />
        <Image Grid.Column="4"
               Source="ellipsis.png"
               Style="{StaticResource Size15Image}"
               VerticalOptions="Center"
               HorizontalOptions="Start" />
    </Grid>
</ContentView>

